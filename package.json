{
  "name": "mern-shopping-list",
  "version": "1.0.0",
  "description": "Shopping list built with the MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjleis25/mern-shopping-list.git"
  },
  "author": "Thomas Leis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tjleis25/mern-shopping-list/issues"
  },
  "homepage": "https://github.com/tjleis25/mern-shopping-list#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "mongoose": "^5.3.15"
  },
  "devDependencies": {
    "nodemon": "^1.18.7"
  }
}
